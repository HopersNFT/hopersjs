    "@types/jest": "^29.1.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "29.2.2",
    "babel-watch": "^7.0.0",
    "cross-env": "^7.0.2",
    "eslint": "8.25.0",
    "eslint-config-prettier": "^8.5.0",
